<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/activity_toolbar_custom" />

    <RelativeLayout
        android:id="@+id/home_rel_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_actionbar">

        <Button
            android:id="@+id/home_btn_start"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/menu_button_selector"
            android:text="Start"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/location_txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/home_btn_start"
            android:text="-----"
            android:textColor="@color/toolbar_color_dark"
            android:textSize="@dimen/text_desc_size"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/location_txt_status"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Latitude"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=":"
                    android:textColor="@color/toolbar_color_dark"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/location_txt_latitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/text_desc_size"
                    android:layout_weight="1.4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Longitude"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=":"
                    android:textColor="@color/toolbar_color_dark"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/location_txt_longitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/text_desc_size"
                    android:layout_weight="1.4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Address"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=":"
                    android:textColor="@color/toolbar_color_dark"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/location_txt_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/text_desc_size"
                    android:layout_weight="1.4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="City"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=":"
                    android:textColor="@color/toolbar_color_dark"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/location_txt_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/text_desc_size"
                    android:layout_weight="1.4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="State"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=":"
                    android:textColor="@color/toolbar_color_dark"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/location_txt_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/text_desc_size"
                    android:layout_weight="1.4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Country"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=":"
                    android:textColor="@color/toolbar_color_dark"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/location_txt_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/text_desc_size"
                    android:layout_weight="1.4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="PIN Code"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=":"
                    android:textColor="@color/toolbar_color_dark"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/location_txt_pincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/text_desc_size"
                    android:layout_weight="1.4"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>